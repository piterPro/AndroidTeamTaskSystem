<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.piter.piterdiplomna3.fragments.EditInfoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/joinCompanyET"
                android:hint="Enter Company" />

            <com.piter.piterdiplomna3.MyListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggestCompanyLV"
                android:visibility="gone">

            </com.piter.piterdiplomna3.MyListView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/joinPositionET"
                android:hint="Enter position" />

            <com.piter.piterdiplomna3.MyListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggestPositionLV"
                android:visibility="gone">

            </com.piter.piterdiplomna3.MyListView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
