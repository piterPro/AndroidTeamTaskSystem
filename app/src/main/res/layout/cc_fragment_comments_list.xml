<com.piter.piterdiplomna3.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/comment_layout"
    tools:context="com.piter.piterdiplomna3.fragments.CommentsFragment"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <!--<RelativeLayout-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="wrap_content"-->
             <!--android:orientation="vertical"-->
             <!--android:id="@+id/commentlayout">-->


        <TextView
            android:text="@string/Comments_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentsStartTV"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:textColorHighlight="@color/cardview_shadow_start_color"
            android:background="@color/cardview_shadow_start_color" />


        <com.piter.piterdiplomna3.helper.MyListView
            android:layout_width="match_parent"
            android:id="@+id/CommentsListView"
            android:layout_below="@+id/commentsStartTV"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:theme="@style/Base.Theme.AppCompat.Light.DialogWhenLarge"
        android:layoutMode="clipBounds"
        android:layout_below="@+id/CommentsListView"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/commentBtn"
            android:text="Send"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:ems="10"
            android:id="@+id/comment_textET"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/commentBtn"
            android:layout_marginBottom="5dp"
            android:inputType="text" />

    </RelativeLayout>
        <!--</RelativeLayout>-->

</com.piter.piterdiplomna3.MyRelativeLayout>
